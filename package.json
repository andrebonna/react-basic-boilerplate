{
  "name": "react-basic-boilerplate",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "webpack-dev": "webpack -w",
    "webpack-prod": "NODE_ENV=production webpack",
    "express-server": "babel-node ./Server/src/app",
    "lint": "eslint --quiet View/src/** Server/** *.js",
    "dev": "concurrently --kill-others \"yarn webpack-dev\" \"yarn express-server\"",
    "start": "yarn lint && yarn webpack-prod && yarn express-server",
    "test": "jest"
  },
  "jest": {
    "unmockedModulePathPatterns": [
      "node_modules/react/",
      "node_modules/enzyme/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": ["**/*.js", "!node_modules/**", "!**/public/**", "!**/*.spec.js"],
    "coverageReporters": ["cobertura", "html"],
    "testResultsProcessor": "./node_modules/jest-junit-reporter"
  },
  "dependencies": {
    "body-parser": "^1.16.0",
    "bootstrap": "^3.3.7",
    "classnames": "^2.2.5",
    "express": "^4.13.4",
    "express-generic-crud": "^1.0.3-b",
    "mongoose": "^4.7.7",
    "react": "^15.3.2",
    "react-bootstrap": "^0.30.7",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "react-router": "^3.0.2",
    "react-table": "^4.2.7",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "request-promise-native": "^1.0.3",
    "serve-static": "^1.11.2"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^17.0.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "clean-webpack-plugin": "^0.1.15",
    "concurrently": "^3.1.0",
    "css-loader": "^0.26.1",
    "enzyme": "^2.6.0",
    "eslint": "^3.8.1",
    "eslint-config-google": "^0.7.1",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.26.0",
    "jest": "^17.0.0",
    "jest-cli": "^17.0.0",
    "jest-junit-reporter": "^1.1.0",
    "node-sass": "^4.3.0",
    "sass-loader": "^4.1.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2"
  }
}
